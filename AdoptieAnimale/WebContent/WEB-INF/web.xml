<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>AdoptieAnimale</display-name>
  
  <servlet>  
    <servlet-name>com.login.LoginServlet</servlet-name>  
    <servlet-class>com.login.LoginServlet</servlet-class>  
  </servlet>  
  
  <servlet>  
    <servlet-name>com.controller.AdminControl</servlet-name>  
    <servlet-class>com.controller.AdminControl</servlet-class>  
  </servlet>  
  
  <servlet>  
    <servlet-name>com.controller.FurnizorControl</servlet-name>  
    <servlet-class>com.controller.FurnizorControl</servlet-class>  
  </servlet>
  
  <servlet>  
    <servlet-name>com.controller.ClientControl</servlet-name>  
    <servlet-class>com.controller.ClientControl</servlet-class>  
  </servlet>
  
  <servlet>  
    <servlet-name>com.registration.Register</servlet-name>  
    <servlet-class>com.registration.Register</servlet-class>  
  </servlet>  
  
   <servlet-mapping>  
    <servlet-name>com.login.LoginServlet</servlet-name>  
    <url-pattern>/login</url-pattern>  
  </servlet-mapping>  
  
  <servlet-mapping>  
    <servlet-name>com.controller.AdminControl</servlet-name>  
    <url-pattern>/admin</url-pattern>  
  </servlet-mapping>  
  
  <servlet-mapping>  
    <servlet-name>com.controller.FurnizorControl</servlet-name>  
    <url-pattern>/furnizor</url-pattern>  
  </servlet-mapping>  
  
  <servlet-mapping>  
    <servlet-name>com.controller.ClientControl</servlet-name>  
    <url-pattern>/ClientControl</url-pattern>  
  </servlet-mapping>  
  
    <servlet-mapping>  
    <servlet-name>com.registration.Register</servlet-name>  
    <url-pattern>/Register</url-pattern>  
  </servlet-mapping> 
  
  
    <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
 
  
</web-app>